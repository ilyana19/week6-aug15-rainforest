<section class="product-page">
  <div class="product-wrapper">
    <h1 class="product-name">
      <%= @product.name %>
      <span class="product-price">($<%= @product.price_in_cents/100 %>)</span>
    </h1>

    <p class="product-description"><%= @product.description %></p>

    <%= link_to('Edit', edit_product_path, class: 'btn-default') %>
  </div>
</section>